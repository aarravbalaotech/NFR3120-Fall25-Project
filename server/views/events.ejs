<%- include('partials/header') %>
<%- include('partials/main_nav') %>

<div class="events-container">
  <h1>Campus Events</h1>
  
  <!-- Search Bar -->
  <div class="search-filter-bar">
    <input 
      type="text" 
      id="eventSearch" 
      class="search-input" 
      placeholder="Search events by title or location..."
      onkeyup="filterEvents()"
    >
    
    <!-- Filter Dropdown -->
    <select id="categoryFilter" class="filter-select" onchange="filterEvents()">
      <option value="">All Categories</option>
      <option value="Academic">Academic</option>
      <option value="Social">Social</option>
      <option value="Sports">Sports</option>
      <option value="Workshop">Workshop</option>
      <option value="Networking">Networking</option>
      <option value="Other">Other</option>
    </select>
    
    <!-- Add Event Button -->
    <a href="/events/offer" class="btn btn-primary">+ Add Event</a>
  </div>

  <!-- Events Grid -->
  <div class="events-grid">
    <% if (events && events.length > 0) { %>
      <% events.forEach(event => { %>
        <div class="event-card" data-category="<%= event.category %>" data-title="<%= event.title %>">
          <div class="event-header">
            <h3><%= event.title %></h3>
            <span class="category-badge"><%= event.category %></span>
          </div>
          
          <p class="event-description"><%= event.description %></p>
          
          <div class="event-details">
            <p><strong> Date:</strong> <%= new Date(event.date).toLocaleDateString() %></p>
            <p><strong> Time:</strong> <%= event.time %></p>
            <p><strong> Location:</strong> <%= event.location %></p>
            <p><strong> Organizer:</strong> <%= event.organizerName %></p>
          </div>
          
          <div class="event-footer">
            <a href="mailto:<%= event.contact %>" class="btn btn-secondary">Contact Organizer</a>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p class="no-events">No events available. <a href="/events/offer">Create one!</a></p>
    <% } %>
  </div>
</div>

<script>
function filterEvents() {
  const searchInput = document.getElementById('eventSearch').value.toLowerCase();
  const categoryFilter = document.getElementById('categoryFilter').value;
  const cards = document.querySelectorAll('.event-card');

  cards.forEach(card => {
    const title = card.getAttribute('data-title').toLowerCase();
    const category = card.getAttribute('data-category');

    const matchesSearch = title.includes(searchInput);
    const matchesCategory = categoryFilter === '' || category === categoryFilter;

    card.style.display = (matchesSearch && matchesCategory) ? 'block' : 'none';
  });
}
</script>

