  margin: 0.5rem 0;
}

.service-details {
  font-size: 0.9rem;
  color: #555;
  margin: 1rem 0;
}

.service-details p {
  margin: 0.25rem 0;
}

.service-footer {
  margin-top: 1rem;
  padding-top: 1rem;
  border-top: 1px solid #eee;
}

.no-services {
  text-align: center;
  color: #999;
  grid-column: 1 / -1;
  padding: 2rem;
}
</style>

<%- include('partials/footer') %>