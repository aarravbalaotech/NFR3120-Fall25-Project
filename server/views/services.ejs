<%- include('partials/header') %>
<%- include('partials/main_nav') %>

<div class="services-container">
  <h1>Campus Services</h1>
  
  <!-- Search Bar -->
  <div class="search-filter-bar">
    <input 
      type="text" 
      id="serviceSearch" 
      class="search-input" 
      placeholder="Search services by title..."
      onkeyup="filterServices()"
    >
    
    <!-- Filter Dropdown -->
    <select id="categoryFilter" class="filter-select" onchange="filterServices()">
      <option value="">All Categories</option>
      <option value="Tutoring">Tutoring</option>
      <option value="Roommate Find">Roommate Find</option>
      <option value="Carpool">Carpool</option>
      <option value="Printing">Printing</option>
      <option value="Tech Help">Tech Help</option>
      <option value="Other">Other</option>
    </select>
    
    <!-- Offer Service Button -->
    <a href="/services/offer" class="btn btn-success">Offer Service</a>
  </div>

  <!-- Services Grid -->
  <div class="services-grid">
    <% if (services && services.length > 0) { %>
      <% services.forEach(service => { %>
        <div class="service-card" data-category="<%= service.category %>" data-title="<%= service.title %>">
          <% if (service.image) { %>
            <img src="<%= service.image %>" class="service-image" alt="Service Image">
          <% } %>
          
          <div class="service-body">
            <h5 class="service-title"><%= service.title %></h5>
            <span class="category-badge"><%= service.category %></span>
            <p class="service-description"><%= service.description %></p>
            
            <% if (service.rate) { %>
              <p class="service-rate"><strong>Rate:</strong> <%= service.rate %></p>
            <% } %>
            
            <div class="service-details">
              <p><strong>Provider:</strong> <%= service.providerName %></p>
              <p><strong>Contact:</strong> <%= service.contact %></p>
            </div>
            
            <div class="service-footer">
              <a href="mailto:<%= service.contact %>" class="btn btn-secondary">Contact Provider</a>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p class="no-services">No services available. <a href="/services/offer">Offer one!</a></p>
    <% } %>
  </div>
</div>

<script>
function filterServices() {
  const searchInput = document.getElementById('serviceSearch').value.toLowerCase();
  const categoryFilter = document.getElementById('categoryFilter').value;
  const cards = document.querySelectorAll('.service-card');

  cards.forEach(card => {
    const title = card.getAttribute('data-title').toLowerCase();
    const category = card.getAttribute('data-category');

    const matchesSearch = title.includes(searchInput);
    const matchesCategory = categoryFilter === '' || category === categoryFilter;

    card.style.display = (matchesSearch && matchesCategory) ? 'block' : 'none';
  });
}
</script>

